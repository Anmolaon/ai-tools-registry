    },
    {
      "name": "tool-pack",
      "type": "registry:block",
      "title": "Tool Pack (All)",
      "description": "Install all sample tools and related renderers.",
      "registryDependencies": [
        "@ai-tools/weather",
        "@ai-tools/calculator",
        "@ai-tools/translate",
